                "-mdfp=\"C:\\Program Files\\Microchip\\PIC18F-K_DFP\\xc8\"",
                "-std=c99",
                "-mno-keep-startup",
                "-Wa,-a=build/${fileBasenameNoExtension}/diagnostics/assembly_list_file.lst",
                "-Wl,-Map=build/${fileBasenameNoExtension}/${fileBasenameNoExtension}.map",
                "-v",
                "-mheap=auto",
                "-mstack=nonreentrant",
                "-mstackcall",
                // "-msummary=xmlfull", 

                // "-Wno-#warnings",
                "-I", "MCC_Config/mcc_generated_files/system/",
                "-I", "MCC_Config/mcc_generated_files/i2c_host/",
                "-I", "MCC_Config/mcc_generated_files/uart/",
                "-I", "MCC_Config/mcc_generated_files/adc/",
                "-I", "MCC_Config/mcc_generated_files/peripheral/",
                // "-I", "ssd1309/src",
                // "-I", "ssd1309/example",
                // "-I", "ssd1309/interface",
                // "-I", "SSD1309_Driver/",
                // "-I", "SSD1309_Driver/base",
                // "-I", "SSD1309_Driver/GFX",
                // "-I", "SSD1309_Driver/quick_frames",
                "-I", "LoRa/",
                "-I", "SoftSPI_ili/",
                "-I", "SoftSPI_lora/",
                "-I", "logger/",
                "-I", "payloads/",
                "-I", "payloads/decode",
                "-I", "payloads/subcommands",
                "-I", "payloads/encode",
                "-I", "payloads/base",
                "-I", "payloads/lora_display_interface",
                "-I", "payloads/function_maps",
                "-I", "shared_rx_tx/",
                "-I", "aes_lib",
                "-I", "ili9488_driver/",
                "-I", "ili9488_driver/base",
                "-I", "ili9488_driver/GFX",
                "-I", "ili9488_driver/quick_frames",

                // "-S",
                "-o",
                "build/${fileBasenameNoExtension}/${fileBasenameNoExtension}.hex",
                "-O2",
                "${file}",
                "MCC_Config/mcc_generated_files/system/src/system.c",
                "MCC_Config/mcc_generated_files/system/src/pins.c",
                "MCC_Config/mcc_generated_files/system/src/interrupt.c",
                "MCC_Config/mcc_generated_files/system/src/config_bits.c",
                "MCC_Config/mcc_generated_files/system/src/clock.c",
